/* pages/detail/childCpns/w-shop-info/w-shop-info.wxss */
.shop-info {
  padding: 8px 16rpx 50rpx;
  border-bottom: 4px solid #f2f2f2;
}

.title-info {
  margin-top: 12px;
}

.shop-info-image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 46rpx;
  border: 1px solid rgba(200, 200, 200, .6);
  vertical-align: middle;
}

.shop-info-text {
  margin-left: 10rpx;
  
}

.entrance {
  text-align: center;
}

.entrance-button {
  padding: 8rpx 200rpx;
}

.sell-info {
  display: flex;
  margin: 15px 0;
}

.sell-item {
  flex: 1;
  text-align: center;
}

.count-info {
  display: flex;
  margin: 10px 0;
  border-right: 1px solid rgba(200,200,200,.6);
}

.count-item {
  flex: 1;
  text-align: center;
}

.count {
  font-size: 40rpx;
}

.text {
  font-size: 28rpx;
  margin-top: 16rpx;
}

.grade-info {
  font-size: 28rpx;
  padding: 0 20rpx;
}

.grade-row {
  display: flex;
}

.grade-row > .item {
  margin-top: 8rpx;
}

.grade-row > .name {
  width: 200rpx;
}

.grade-row > .score {
  flex: 1;
}

.grade-row > .better {
  flex: 1;
}

.good {
  color: #ff5777;
}

.less {
  color: #5ea732;
}
