/* pages/detail/childCpns/w-comment-info/w-comment-info.wxss */
.comment-info {
  padding: 24px 30rpx;
  border-bottom: 5px solid #f2f2f2;
}

.header {
  display: flex;
  justify-content: space-between;
  padding-bottom: 12px;
  font-size: 32rpx;
  border-bottom: 1px solid #eee;
}

.user {
  margin: 12px 0;
}

.user-image {
  width: 84rpx;
  height: 84rpx;
  vertical-align: middle;
  border-radius: 42rpx;
}

.user-text {
  vertical-align: middle;
  margin-left: 16rpx;
  font-size: 32rpx;
  color: #666;
}

.comment {
  font-size: 28rpx;
  text-indent: 1.5em; /*开通空1.5个字大小*/
  line-height: 1.5;   /*每行1.5个字的高度*/
}

.other-info {
  display: flex;
  font-size: 24rpx;
  margin-top: 13px;
  color: #888;
}

.time {
  margin-right: 10rpx;
}

.picture {
  display: flex;
  justify-content: space-between;
  margin-top: 8px;
}

.picture-image {
  max-width: 30%;
}