.tab-control {
  display: flex;
  background-color:white;
  /* border-radius: 12rpx; */
  height: 82rpx;
  padding-top: 6px;
}

.tab-item {
  flex: 1;
  text-align: center;
}

.active {
  color: #ff5777;
}

.itemText {
  font-size: 34rpx;
  align-items: bottom;
}

.active > .itemText {
  padding: 8px 4px;
  border-bottom: 6rpx solid #ff5777;
}